<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:padding="10dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
            android:id="@+id/user_info_setting_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="个人信息"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
            android:id="@+id/modify_pwd_setting_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="修改密码"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
            android:id="@+id/about_setting_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="关于我们"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
            android:id="@+id/feed_back_setting_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="意见反馈"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
            android:id="@+id/clear_cache_setting_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="清理缓存"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
            android:id="@+id/share_setting_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="分享"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
            android:id="@+id/version_setting_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="版本检查"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
            android:id="@+id/logout_setting_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="退出"/>
        </LinearLayout>
        
    </LinearLayout>


</LinearLayout>