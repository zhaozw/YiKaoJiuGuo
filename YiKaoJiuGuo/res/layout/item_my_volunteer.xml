<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/avatar_item_my_volunteer_iv"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/college_item_my_volunteer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qinghua"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/major_item_my_volunteer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qinghua"
            android:layout_marginTop="5dp"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/batch_item_my_volunteer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qinghua"
            android:textColor="@color/light2_grey"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recruit_count_item_my_volunteer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qinghua"
            android:textColor="@color/light2_grey"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>