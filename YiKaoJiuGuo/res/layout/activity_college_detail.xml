<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CollegeDetailsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp" >

            <ImageView
                android:id="@+id/image_college_details_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/default_top" />

            <TextView
                android:id="@+id/imgtotal_college_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="5dp"
                android:background="@color/translucent" />
        </FrameLayout>

        <TextView
            android:id="@+id/property_college_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="高校属性: "
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/site_college_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="所在地: "
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/province_college_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="招生省份: "
            android:textColor="@color/grey" />

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/regulation_college_detail_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/green"
                android:textSize="14sp"
                android:gravity="center"
                android:text="招生简章"/>

            <TextView
                android:id="@+id/plan_college_detail_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="招生计划"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rule_college_detail_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="录取原则"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/content_college_details_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</ScrollView>