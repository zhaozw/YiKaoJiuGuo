<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_major_detail_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MajorDetailActivity" >
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="vertical" >
<RelativeLayout
        android:id="@+id/logo_major_detail_rl1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/green" >

        <Button
            android:id="@+id/major_detail_back_btn"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/jiantou" />

        <TextView
            android:id="@+id/major_detail_title_tv"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="雕塑"
            android:textColor="#B0EBE5"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/major_detail_baokao_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0人报考"
            android:layout_marginRight="5dp"
            android:textColor="#F7FA06" />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <ImageView
                android:id="@+id/logo_major_detail_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_top" />

            <TextView
                android:id="@+id/major_detail_major_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/logo_major_detail_iv"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/logo_major_detail_iv"
                android:text="雕塑"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/major_detail_college_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/major_detail_major_tv"
                android:layout_below="@id/major_detail_major_tv"
                android:layout_marginTop="5dp"
                android:text="清华大学美术学院"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/major_detail_batch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/major_detail_major_tv"
                android:layout_below="@id/major_detail_college_tv"
                android:layout_marginTop="5dp"
                android:text="本科一批"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/major_detail_recruit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/major_detail_major_tv"
                android:layout_below="@id/major_detail_batch_tv"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey"
                android:text="招生人数：15人" />

            <Button
                android:id="@+id/major_detail_join"
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:background="@drawable/major_button_selector" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/detail_major_detail_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/green"
                android:textSize="14sp"
                android:gravity="center"
                android:text="招生详情"/>

            <TextView
                android:id="@+id/score_major_detail_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="录取分数"/>

            <TextView
                android:id="@+id/introduce_major_detail_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="专业介绍"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/content_major_detail_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</ScrollView>